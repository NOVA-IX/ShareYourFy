<style>
  * {
    box-sizing: border-box;
  }

  img {
    vertical-align: middle;
  }

  /* Slideshow container */
  .slideshow-container {
    max-width: 1000px;
    position: relative;
    margin: auto;
  }

  /* Fading animation */
  .fade {
    -webkit-animation-name: fade;
    -webkit-animation-duration: 1.5s;
    animation-name: fade;
    animation-duration: 1.5s;
  }

  @-webkit-keyframes fade {
    from {
      opacity: .4
    }

    to {
      opacity: 1
    }
  }

  @keyframes fade {
    from {
      opacity: .4
    }

    to {
      opacity: 1
    }
  }
</style>
<section class="container mx-auto min-sec text-gray-500 bg-gray-900 body-font">
  <h1 class="text-3xl font-medium text-indigo-500 title-font px-5">Textbook Renting/Buying</h1>
  <div class="container px-5 py-10 mx-auto">
    <div class="flex flex-wrap -m-4">

      <% data.forEach(item => { %>
      <div class="lg:w-1/4 md:w-1/2 p-4 w-full" style="z-index: 1;">

        <div class="slideshow-container">
          <div class="mySlides fade">
            <img src="<%= item.imageUrl[0] %>" style="width:100%; cursor: pointer;" id="image">
          </div>
        </div>

        <div class="mt-4 text-center">
          <h2 class="text-white title-font text-lg font-medium"><%= item.title%></h2>
          <h3 class="text-gray-500 text-2xs tracking-widest title-font mb-1"><%= item.description%></h3>
          <p class="mt-1">Contact: <%= item.contact%></p>
          <p class="mt-1">Base price: <%= item.price%></p>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
