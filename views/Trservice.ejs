<style>
	img {
		vertical-align: middle;
	}

	/* Slideshow container */
	.slideshow-container {
		max-width: 1000px;
		position: relative;
		margin: auto;
	}

	/* Fading animation */
	.fade {
		-webkit-animation-name: fade;
		-webkit-animation-duration: 1.5s;
		animation-name: fade;
		animation-duration: 1.5s;
	}

	@-webkit-keyframes fade {
		from {
			opacity: .4
		}

		to {
			opacity: 1
		}
	}

	@keyframes fade {
		from {
			opacity: .4
		}

		to {
			opacity: 1
		}
	}
</style>


<form action="/services/textbook" method="POST" enctype="multipart/form-data" class="modal" style="position: absolute; z-index: 3;">
	<span class="close" id="cross3" onclick="formFunction(false)">&times;</span>
	<heading>Share Textbooks</heading>
	<input type="text" name="title" placeholder="Textbook Name" required/>
	<input type="text" name="description" placeholder="Description" required/>
	<input type="tel" pattern="[0-9]{10}" name="contact" placeholder="8796253421 (Contact No.)" required/>
	<input type="text" name="price" placeholder="Base Price(if any)" />
	<label for="upload">*Upload image of textbook</label>
	<input type="file" name="upload" multiple/>
	<input type="submit" value="Upload" style="background: #667EEA; color: floralwhite; cursor: pointer" />
</form>

<div class="container px-5 py-8 mx-auto">
	<div class="flex flex-col sm:flex-row sm:items-center items-start mx-auto"
		style="display: flex; align-items: center">
		<h1 class="text-3xl flex-grow sm:pr-16 font-medium title-font text-indigo-500">
			Textbook Renting/Buying
		</h1>
		<button id="blogbtn" style="align-self: center;" onclick="formFunction(true)"
			class="flex-shrink-0 text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg mt-10 sm:mt-0">
			Upload
		</button>
	</div>
</div>

<section class="text-gray-400 bg-gray-900 body-font">
	<div class="container px-5 py-12 mx-auto flex">
		<div class="flex flex-wrap -m-4">
			<% data.forEach(item=> { %>
				<div class="lg:w-1/4 md:w-1/2 p-4 w-full" style="z-index: 1;">
					<div class="slideshow-container">
						<div class="mySlides fade">
							<img src="<%= item.imageUrl[0] %>" style="width: 100%; cursor: pointer; height: 180px" id="image">
						</div>
					</div>
					<div class="mt-4 text-center">
						<h2 class="text-white title-font text-lg font-medium">
							<%= item.title%>
						</h2>
						<h3 class="text-gray-500 text-2xs tracking-widest title-font mb-1">
							<%= item.description%>
						</h3>
						<p class="mt-1">Contact: <%= item.contact%>
						</p>
						<p class="mt-1">Base price: <%= item.price%>
						</p>
					</div>
				</div>
				<% }) %>
		</div>
	</div>
</section>


<style>
    .modal {
        width: 22em;
        height: 32em;
        background: #1a202c;
        border: 2px solid #ffffff;
        border-radius: 10px;
        display: none;
        flex-direction: column;
        justify-content: center;
        left: 50%;
        transform: translateX(-50%);
    }

    .modal > heading {
        text-align: center;
        margin-bottom: 1em;
        font-size: 1.5em;
        color: #667eea;
        font-weight: bold;
    }

	.modal > label {
		text-align: center;
		margin: 0.5em 0em 0.2em 0em;
		font-size: 1em;
		color: #667EEA;
	}

    .modal > span {
        text-align: right;
        margin-right: 1em;
        margin-top: -1em;
        font-size: 1.6em;
        font-weight: lighter;
        color: white;
    }

    .modal > span:hover {
        font-weight: bolder;
        cursor: default;
        transform: skew(-1deg, -1deg);
    }

    .modal > input {
        color: #667eea;
        font-size: 1em;
        padding: 5px;
        margin: 0 3em 1em 3em;
        border-radius: 5px;
    }

    .show-form {
        display: flex;
    }
</style>

<script>
	let form = document.querySelector('form')

	function formFunction(display) {
		if (display) form.classList.add('show-form')
		else form.classList.remove('show-form')
	}
</script>