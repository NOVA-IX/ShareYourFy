<header class="text-gray-500 navbar bg-gray-900 body-font" style="padding-bottom: 100px;">
    <div class="container navbar-fixed mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center"
      style="position: fixed; background-color: #1A202C;">
      <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
        <img src="/img/logo.jpeg" alt="Logo" height=50 width=50>
        <span class="ml-3 text-xl">shareyourFY</span>
      </a>
      <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
        <a class="mr-5 hover:text-white" 
          style="<%= title == 'Home' ? 'color: #667EEA; cursor: pointer;' : 'cursor: pointer;' %>" href="/index">Home</a>
        <a class="mr-5 hover:text-white"
          style="<%= title == 'About' ? 'color: #667EEA; cursor: pointer;' : 'cursor: pointer;' %>" href="/about">About</a>
        <a class="mr-5 hover:text-white"
          style="<%= title == 'Services' ? 'color: #667EEA; cursor: pointer;' : 'cursor: pointer;' %>" href="/services">Services</a>
        <a class="mr-5 hover:text-white"
          style="<%= title == 'Contact' ? 'color: #667EEA; cursor: pointer;' : 'cursor: pointer;' %>" href="/contact">Contact</a>
      </nav>
      <% %>
      <% if (user) { %>
        <h1>Welcome<br>   <%= user.username %> </h1>
      <% } else { %>
        <a href="/login">
          <button id="myBtn"
            class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0">Login
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              class="w-4 h-4 ml-1" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
        </a>
      <% } %>
    </div>
  </header>